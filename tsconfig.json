{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@config": [
        "./src/config"
      ],
      "@middlewares": [
        "./src/middlewares"
      ],
      "@modules": [
        "./src/modules"
      ],
      "@errors": [
        "./src/errors"
      ],
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
